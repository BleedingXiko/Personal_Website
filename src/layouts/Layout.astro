---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import "../components/GlobalStyle.css";

import { ViewTransitions } from "astro:transitions";
import Contact from "../components/Contact.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Software | Game | Web Developmer" />

    <title>{title}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://kit.fontawesome.com/bbeb7cba67.js" crossorigin="anonymous"></script>
    <ViewTransitions />
  </head>
  <body class="bg"> 
    <Nav />
    <slot />
    <Contact  />
    <Footer />
  </body><style>
    .bg {
      margin: 0;
      padding: 0;
      font-family: sans-serif;
      background-color: var(--bg);
      color: var(--comp);
      background-image: url("https://res.cloudinary.com/dpfu8nq5k/image/upload/v1696702230/Project-11/bg1_i1eovh.jpg");
       background-position: bottom;    }
  </style>

  <script
    is:inline
    src="https://code.jquery.com/jquery-3.7.1.min.js"
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
    crossorigin="anonymous"></script>
</html>
